<assembly>
    <id>bin</id>
    <formats>
        <format>dir</format>
        <format>tar.bz2</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>assembly</directory>
            <outputDirectory>.</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
            <excludes>
                <exclude>logBot.sh</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target/classes</directory>
            <outputDirectory>/classes</outputDirectory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>assembly/logBot.sh</source>
            <outputDirectory>.</outputDirectory>
            <fileMode>0754</fileMode>
            <lineEnding>unix</lineEnding>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <scope>runtime</scope>
            <excludes>
                <exclude>org.jasig:ConfluenceIrcLogger</exclude>
                <exclude>logkit:logkit</exclude>
                <exclude>avalon-framework:avalon-framework</exclude>
                <exclude>javax.servlet:servlet-api</exclude>
            </excludes>
        </dependencySet>
    </dependencySets>
</assembly>