<assembly>
    <id>bin</id>
    <formats>
        <format>dir</format>
        <format>tar.bz2</format>
        <format>zip</format>
    </formats>
    <files>
        <!-- doing this file-by-file for filtering to work :( -->
        <file>
            <source>src/main/assembly/resources/scripts/logbot.sh</source>
            <outputDirectory>/</outputDirectory>
            <fileMode>755</fileMode>
            <filtered>true</filtered>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>src/main/assembly/resources/configs</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>